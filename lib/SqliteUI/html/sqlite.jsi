function ConvChar( str:any )
{
    if (str === undefined) return '';
    if (str === null) {
        if (self.nullValue !== null)
            return self.nullValue;
        return '';
    }
    var c = {'<':'&lt;', '>':'&gt;', '&':'&amp;', '"':'&quot;', "'":'&#039;', '#':'&#035;'};
    return str.toString().replace( /[<&>'"#]/g, function(s) { return c[s]; } );
}

