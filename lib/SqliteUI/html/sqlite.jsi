// Return fields from form.
function DlgFormFields(fname:string, prefix:string)
{
    var x = $("#dlg_"+fname)[0];
    var zl = [];
    zl[0] = $('input',x);
    zl[1] = $('select',x);
    var s, id, n, res = {};
    for (var j in zl) {
        var z = zl[j];
        for (var i in z) {
            if (z[i].id === undefined) continue;
            id = z[i].id.substr(6+prefix.length);
            res[id] = z[i].value;
        }
    }
    return res;
}

